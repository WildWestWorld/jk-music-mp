<!--components/index/lastplaymusic-list/index.wxml-->


  <view class="music-card">
    <view class="cover">
       <image src="{{item.cover}}"></image>
       <view class="circle"></view>
    </view>
    
   <view class="info">
     <view class="name">{{item.name}}</view>
      <view class="author">{{item.album+' - '+item.artist}}</view>


    </view>
    <view class="likeAbleContainer" wx:if="{{likeAble}}">
        <image class="likeAble" src="../../../images/heart.svg"></image>
      </view>
  </view>





